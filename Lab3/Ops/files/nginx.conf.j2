
user  nginx;
worker_processes  auto;

error_log  /var/log/nginx/error.log notice;
pid        /var/run/nginx.pid;

events {
    worker_connections  1024;
}

http {
    upstream calWeb {
        least_conn;
        {% for host in groups['prod'] %}server {{hostvars[host]['ansible_default_ipv4']['address']}}; {% endfor %}
    }
    server {
        listen 80;
        listen 443 ssl;

        ssl_certificate /etc/ssl/calWeb/calWeb.com.crt;
        ssl_certificate_key /etc/ssl/calWeb/calWeb.com.pem;

        location / {
            proxy_pass http://calWeb;
        }
    }
}